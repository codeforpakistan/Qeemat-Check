<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <android.support.v7.widget.CardView
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        >
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/RelativeLayout2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="2dp"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceMedium"
                    android:text="Khattak General Store"
                    android:id="@+id/ItemName"
                    android:textColor="@color/colorPrimaryDark"
                    android:textAlignment="center"
                    android:textStyle="bold"
                    android:layout_alignParentTop="true"
                    android:layout_alignRight="@+id/ShopAddr"
                    android:layout_alignEnd="@+id/ShopAddr"
                    android:layout_marginTop="10dp"
                    android:layout_toRightOf="@+id/shoprating"
                    android:layout_toEndOf="@+id/shoprating"
                    android:layout_marginLeft="5dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="?android:attr/textAppearanceSmall"
                    android:text="Chaudhary Market I-9/4"
                    android:id="@+id/ShopAddr"
                    android:layout_below="@+id/shoprating"
                    android:layout_toRightOf="@+id/shoprating"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginTop="6dp"
                    android:layout_marginLeft="5dp" />

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:id="@+id/shoprating"
                    style="@style/Widget.AppCompat.RatingBar.Small"
                    android:numStars="5"
                    android:rating="5"
                    android:layout_alignTop="@+id/ItemName"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true"
                    android:stepSize=".5" />

            </RelativeLayout>

        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>